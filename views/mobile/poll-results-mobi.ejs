<!-- views/poll-create -->
<!DOCTYPE html>
<html>
<head>
	<title>Poll Results Menu</title>

	<link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/jqueryui/1.11.4/jquery-ui.min.css"/>
    <link rel="stylesheet" type="text/css" href="/jquery.mobile.custom.structure.min.css">
    <link rel="stylesheet" type="text/css" href="/jquery.mobile.custom.theme.min.css">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <script src="../js/jquery.mobile.custom.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.2.0/jquery.min.js"></script>
    <script src="https://code.jquery.com/ui/1.11.4/jquery-ui.min.js" integrity="sha256-xNjb53/rY+WmG+4L6tTl9m6PpqknWZvRt0rO1SRnJzw=" crossorigin="anonymous"></script>

    <style type="text/css">
		body {
			padding-top:80px; word-wrap:break-word; 
		}
    </style>

    <script type="text/javascript">
        jQuery(function() { 
            if ("<%- pollHtml %>" != "") {
                $('#pollResults').html("<%- pollHtml %>");
                if ("<%- pollHtml %>" == "<h3>NO ACTIVE POLLS</h3>") {
                    $('#deactivate').hide();
                }
            }

            $('#deactivate').on('click', function(){
                 $.post("/poll-deactivate", {}, function(data) {
                    window.location.href = data;
                });
            });
        });
    </script>
</head>
<body>
	<div data-role="page" id="pageone" class="container">
		<div data-role="header" class="page-header text-center">
        	<h1>Poll Results</h1>
       		<a href="/logout" class="btn btn-default btn-sm">Logout</a>
       		<a href="/main" class="btn btn-default btn-sm">Back</a>
    	</div>
    
    	<div data-role="main" class="row ui-content">
        
    		<div class="col-sm-6">
    			<div class="well">  
                    <div id="pollResults" class="text-center"></div>
                    <input id="deactivate" class="btn btn-danger btn-lg" type="button" value="Deactivate" />
    			</div>
    		</div>
    	</div>
	</div>
</body>
</html>